<Window x:Class="Aronium.Wpf.Toolkit.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:aronium="http://aronium.com/wpf"
        xmlns:core="clr-namespace:System;assembly=mscorlib"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource Window}"
        FocusManager.FocusedElement="{Binding ElementName=cbTabPlacement}"
        Title="MainWindow" Height="750" Width="950">

    <Window.Resources>

        <core:Double x:Key="ButtonHeightGlobal">32</core:Double>

        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="{StaticResource ButtonHeightGlobal}" />
        </Style>
        <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Height" Value="{StaticResource ButtonHeightGlobal}" />
        </Style>
        <Style TargetType="{x:Type aronium:DropDownButton}" BasedOn="{StaticResource {x:Type aronium:DropDownButton}}">
            <Setter Property="Height" Value="{StaticResource ButtonHeightGlobal}" />
        </Style>
        <Style TargetType="{x:Type aronium:SplitButton}" BasedOn="{StaticResource {x:Type aronium:SplitButton}}">
            <Setter Property="Height" Value="{StaticResource ButtonHeightGlobal}" />
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}" />
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True" HorizontalAlignment="Stretch">
            <MenuItem Header="File">
                <MenuItem Header="Open">
                    <MenuItem Header="File" />
                    <MenuItem Header="Project" />
                    <MenuItem Header="Web site" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Setting" />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Command="Cut" />
                <MenuItem Command="Copy" />
                <MenuItem Command="Paste" />
                <Separator />
                <MenuItem Header="Options" />
            </MenuItem>
            <MenuItem Header="View" />
            <MenuItem Header="Help" />
        </Menu>

        <Grid Margin="5" Grid.Row="1">

            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Grid item 1" />
                    <MenuItem Header="Grid item 2">
                        <MenuItem.Icon>
                            <Ellipse Fill="Green" Width="10" Height="10" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                        <MenuItem Header="Subitem 1" />
                        <Separator />
                        <MenuItem Header="Subitem 2" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Grid item 3" />
                </ContextMenu>
            </Grid.ContextMenu>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <TextBlock Text="Tab placement" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <ComboBox Name="cbTabPlacement" ToolTip="Change tab control tab strip placement" ItemsSource="{Binding TabPlacementValues}" HorizontalAlignment="Left" Width="200" SelectedItem="{Binding ElementName=tabControl, Path=TabStripPlacement}" />
                    <CheckBox IsChecked="{Binding ShowTabControlBorder}" Margin="5,0,0,0" Content="Show border" />
                </DockPanel>
                <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Change theme" VerticalAlignment="Center" Margin="5,0" />
                    <ComboBox ItemsSource="{Binding Themes}" HorizontalAlignment="Left" Width="200" SelectedItem="{Binding ThemeName}" Name="cbSkin" />
                </DockPanel>
            </Grid>

            <TabControl Grid.Row="1" Name="tabControl" SnapsToDevicePixels="True" BorderBrush="{DynamicResource Accent}">
                <TabItem Header="Tab item 1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <GroupBox Header="Text Box">
                                <StackPanel>
                                    <TextBox Text="{Binding IntegerProperty}" Margin="0,5"/>
                                    <TextBox Text="Disabled TextBox" IsEnabled="False" Margin="0,5"/>
                                    <TextBox Text="Read only TextBox" IsReadOnly="True" Margin="0,5"/>
                                    <PasswordBox />
                                    <aronium:NumericUpDown Width="80" HorizontalAlignment="Left" Margin="0,5" Text="{Binding IntegerProperty, UpdateSourceTrigger=PropertyChanged}"/>
                                    <aronium:NumericUpDown Width="80" HorizontalAlignment="Left" DecimalPlaces="2" Text="{Binding DecimalProperty, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                                    <aronium:NumericUpDown Width="80" HorizontalAlignment="Left" Margin="0,5" IsEnabled="False" Text="{Binding IntegerProperty}"/>
                                    <aronium:WatermarkTextBox Margin="0,5" Watermark="Watermarked TextBox" />
                                    <TextBlock Text="Title - Live Search" Style="{DynamicResource Title}" />
                                    <aronium:LiveSearchTextBox ItemsSource="{Binding SelectedCountries}" 
                                                               MaxPopupHeight="300"
                                                               Watermark="Live search..."
                                                               ItemSelected="OnLiveSearchItemSelected"
                                                               Text="{Binding SearchText}"
                                                               Margin="0,5">
                                        <aronium:LiveSearchTextBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding}" />
                                                </Grid>
                                            </DataTemplate>
                                        </aronium:LiveSearchTextBox.ItemTemplate>
                                    </aronium:LiveSearchTextBox>

                                    <aronium:Callout CalloutType="Info" Margin="5">
                                        Info callout
                                    </aronium:Callout>
                                    <aronium:Callout CalloutType="Error" Margin="5">
                                        Error callout
                                    </aronium:Callout>
                                    <aronium:Callout CalloutType="Warning" Margin="5">
                                        Warning callout
                                    </aronium:Callout>
                                </StackPanel>
                            </GroupBox>

                            <GridSplitter ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Grid.Column="1" />

                            <GroupBox Header="Combo Box" Grid.Column="2" SnapsToDevicePixels="True">
                                <StackPanel>
                                    <ComboBox Margin="0,5" Width="180" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Item 1" />
                                        <ComboBoxItem Content="Item 2" />
                                        <ComboBoxItem Content="Item 3" />
                                        <ComboBoxItem Content="Item 4" />
                                        <ComboBoxItem Content="Item 5" />
                                    </ComboBox>

                                    <ComboBox IsEditable="True" Margin="0,5" Width="180" HorizontalAlignment="Left">
                                        <ComboBoxItem Content="Editable Item 1" />
                                        <ComboBoxItem Content="Editable Item 2" />
                                        <ComboBoxItem Content="Editable Item 3" />
                                        <ComboBoxItem Content="Editable Item 4" />
                                        <ComboBoxItem Content="Editable Item 5" />
                                    </ComboBox>

                                    <ComboBox IsEnabled="False" Margin="0,5" Width="180" HorizontalAlignment="Left">
                                        <ComboBoxItem IsSelected="True" Content="Disabled" />
                                    </ComboBox>

                                    <aronium:TextSeparator FontSize="18" FontFamily="Segoe UI Light" Content="Text separator" />

                                    <ProgressBar Value="40" Maximum="100" Margin="0,10" />

                                    <TreeView BorderThickness="0">
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
