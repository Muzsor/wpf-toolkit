                                    </WrapPanel>

                                    <aronium:ToggleSwitch MetroStyle="True" HorizontalAlignment="Left" Background="Firebrick" BackgroundChecked="{StaticResource Accent}"/>

                                    <Label IsEnabled="False" Content="Button group" />

