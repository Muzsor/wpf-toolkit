                            <GroupBox Header="List Box" Grid.Column="6" Padding="0">

                                <ListBox BorderThickness="0">
                                    <ListBoxItem Content="List box item 1" />
                                    <ListBoxItem Content="List box item 2" />
                                    <ListBoxItem Content="List box item 3" />
                                    <ListBoxItem Content="List box item 4" />
                                    <ListBoxItem Content="List box item 8" />
                                    <ListBoxItem Content="List box item 7" />
                                    <ListBoxItem Content="List box item 8" />
                                    <ListBoxItem Content="List box item 9" />
                                    <ListBoxItem Content="List box item 10" />
                                </ListBox>
                            </GroupBox>

                        </Grid>

                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Tab item 2">
                    <Grid>
                        <!--GridSplitter demo-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <DrawingBrush x:Key="DottedBrush" Viewport="0,0,4,4" ViewportUnits="Absolute" TileMode="Tile">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,50,50" />
                                                        <RectangleGeometry Rect="50,50,50,50" />
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Grid Splitter Demo" />
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="TextAlignment" Value="Center" />
                                    <!--<Setter Property="Foreground" Value="{DynamicResource Foreground}" />-->
                                </Style>
                            </Grid.Resources>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" BorderBrush="{StaticResource DottedBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Margin="5" Text="TagControl - Bounded tag items" Style="{StaticResource Heading1}" />

                                    <!--<ScrollViewer Grid.Row="1">-->
                                    <aronium:TagControl VerticalAlignment="Top"
                                                        Margin="5" 
                                                        SelectedItem="{Binding SelectedTag}"
                                                        ItemsSource="{Binding Tags}"
                                                        Grid.Row="1" />
                                    <!--</ScrollViewer>-->
                                    <ListBox ItemsSource="{Binding Tags}" 
                                             Margin="5,0,5,5" 
                                             SelectedItem="{Binding SelectedTag}"
                                             Grid.Row="2"/>
                                </Grid>
                            </Border>
                            <GridSplitter Grid.Row="0" Grid.Column="1" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" BorderBrush="{StaticResource DottedBrush}" Grid.Row="2">
                                <StackPanel Margin="5" Orientation="Vertical">
                                    <TextBlock Margin="0,5" Text="Calendar control style" Style="{StaticResource Heading1}" />
                                    <Viewbox Height="300" Grid.Row="1" >
                                        <Calendar HorizontalAlignment="Left" Margin="5" PreviewMouseUp="OnCalendarPreviewMouseDown"/>
                                    </Viewbox>

                                </StackPanel>
                            </Border>
                            <GridSplitter Focusable="False" Grid.Row="1" Grid.ColumnSpan="3" ResizeBehavior="PreviousAndNext" ResizeDirection="Rows"/>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" Grid.Column="2" BorderBrush="{StaticResource DottedBrush}">
                                <StackPanel Grid.Column="1" Margin="5,5,5,20">

                                    <TextBlock Text="Check box, radio buttons and rating controls" Style="{StaticResource Heading1}" />

                                    <WrapPanel>
                                        <CheckBox Content="CheckBox" IsChecked="True" Margin="0,5,5,5"/>
                                        <CheckBox Content="CheckBox" IsThreeState="True" IsChecked="{x:Null}" Margin="0,5,5,5"/>
                                        <CheckBox Content="CheckBox" IsThreeState="True" IsEnabled="False" IsChecked="{x:Null}" Margin="0,5,5,5"/>
                                        <CheckBox Content="CheckBox" IsEnabled="False" Margin="0,5,5,5"/>
                                        <CheckBox Content="CheckBox" IsChecked="True" IsEnabled="False" Margin="0,5,5,5"/>

                                        <RadioButton Content="CheckBox" IsChecked="True" Margin="0,5,5,5"/>
                                        <RadioButton Content="CheckBox" IsThreeState="True" IsChecked="{x:Null}" Margin="0,5,5,5"/>
                                        <RadioButton Content="CheckBox" IsEnabled="False" Margin="0,5,5,5"/>
                                    </WrapPanel>

                                    <aronium:Rating Stars="10" Margin="0,20" StarSize="20"/>
                                    <aronium:Rating Margin="0" StarBrush="{StaticResource Accent}"/>
                                </StackPanel>
                            </Border>

                            <GridSplitter Focusable="False" Grid.Row="2" Grid.Column="1" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" Grid.Row="2" Grid.Column="2" BorderBrush="{StaticResource DottedBrush}">
                                <StackPanel Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Orientation="Vertical" Grid.Column="1">
                                    <TextBlock Margin="0,5" Text="DatePicker - Standard and disabled styles" Style="{StaticResource Heading1}" />
                                    <StackPanel  HorizontalAlignment="Left" Orientation="Horizontal">
                                        <DatePicker Width="200" />
                                        <DatePicker Margin="5" IsEnabled="False" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"  />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem Header="Data grid">
                    <DataGrid ItemsSource="{Binding Users}" LoadingRow="OnDataGridLoadingRow" CanUserResizeRows="False" RowHeaderWidth="30" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" />
                </TabItem>
                <TabItem Header="Closable Tab Control">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Style="{DynamicResource Title}" Text="Closable tab control example" Margin="0,0,0,10"/>

                        <aronium:ClosableTabControl AllowItemsReorder="True" x:Name="closableTabControl" Grid.Row="1">

                            <aronium:ClosableTabControl.Header>
                                <TextBlock Text="Tab Control Header" Style="{StaticResource Heading1}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            </aronium:ClosableTabControl.Header>

                            <aronium:ClosableTabItem CanClose="False" Header="CanClose: False">
                                <Button Content="Add tab item" Click="OnAddTabItem" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem CanClose="True" Title="Custom title">
                                <aronium:ClosableTabItem.Header>
                                    <TextBlock Text="TextBlock as Header" />
                                </aronium:ClosableTabItem.Header>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem Header="Closable item 2" CanClose="True">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem Header="Closable item 3" CanClose="True">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                        </aronium:ClosableTabControl>

                    </Grid>
                </TabItem>
                <TabItem Header="Flyout">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button Click="ShowFlyout" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150" Content="Show Flyout" />
                        <aronium:ToggleSwitch IsChecked="{Binding ElementName=flyout, Path=IsOpen}" Content="Is flyout open" Padding="5,0,0,0" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </Grid>
                </TabItem>
                <TabItem Header="Material tab control">
                    <TabControl Style="{DynamicResource MaterialTabControlStyle}">
                        <TabItem Header="Users" />
                        <TabItem Header="Security" />
                        <TabItem Header="Security groups" />
                    </TabControl>
                </TabItem>
                <TabItem Header="Guided tour" Name="tabItemGuidedTour">
                    <Grid>
                        <Button Name="guideElement1" Margin="20" Content="Button 1 with some long text" VerticalAlignment="Top" HorizontalAlignment="Left" />
                        <Button Name="altGuideElement1" Margin="20,70,20,20" Content="ALT ELEMENT" VerticalAlignment="Top" HorizontalAlignment="Left" />
                        <TextBox Name="guideElement2" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="300" />
                        <Button Name="guideElement3" Margin="20" Content="Button 3 with some long text, too" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                        <Button Name="guideElement4" Margin="20" Content="Button 4 is a normal button" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
                        <Button Click="OnResetGuide" Padding="20" Content="Restart guided tour" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Grid>
                </TabItem>
            </TabControl>

            <!--Guided tour-->
            <aronium:GuidedTour Name="guide" Scale="{Binding Scale}" Animate="True" AllowDismiss="True" Grid.RowSpan="2" Closing="OnClosingGuidedTour" Closed="OnGuidedTourClosed" Finished="OnGuidedTourFinished" />
        </Grid>
        <aronium:Flyout Grid.RowSpan="2" x:Name="flyout" Title="Flyout Title" Visibility="Collapsed">
            <aronium:Flyout.Content>
                <TextBlock Text="Flyout Content..." VerticalAlignment="Center" HorizontalAlignment="Center" />
            </aronium:Flyout.Content>
        </aronium:Flyout>

        <aronium:NotificationsControl ItemsSource="{Binding Notifications}" 
                                      Margin="5,5,0,7" 
                                      Grid.RowSpan="2"
                                      Focusable="False"
                                      IsTabStop="False"
                                      HorizontalAlignment="Right" />
    </Grid>
</Window>
