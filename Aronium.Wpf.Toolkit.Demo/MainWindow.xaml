                                        <Slider Orientation="Vertical" Maximum="10" Minimum="0" Margin="10" TickPlacement="BottomRight" TickFrequency="5" />
                                    </StackPanel>

                                </StackPanel>

                            </GroupBox>

                            <GridSplitter ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Grid.Column="3" />

                            <GroupBox Header="Buttons" Grid.Column="4">
                                <StackPanel>
                                    <WrapPanel Margin="0,10">
                                        <Button Content="Standard button" HorizontalAlignment="Center" Margin="0,5,5,5">
