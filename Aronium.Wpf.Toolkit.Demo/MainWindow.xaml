                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                    </TreeView>


                                    <StackPanel>
                                        <Slider Orientation="Horizontal" Maximum="100" Minimum="0" TickPlacement="BottomRight" TickFrequency="10" Margin="10"/>
